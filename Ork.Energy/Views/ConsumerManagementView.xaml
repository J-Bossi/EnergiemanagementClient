<UserControl xmlns:Views="clr-namespace:Ork.Energy.Views" x:Class="Ork.Energy.Views.ConsumerManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox Width="200"
                  Margin="0, 10, 0, 0"
                  Grid.Column="0"
                  Grid.Row="0"
                  Style="{DynamicResource VirtualisedMetroComboBox}"
                  Controls:TextboxHelper.Watermark="Verbrauchergruppe"
                  IsEditable="True"
                  ItemsSource="{Binding AllConsumerGroups}"
                  MaxDropDownHeight="125"
                  DisplayMemberPath="GroupName" />

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView ItemsSource="{Binding AllConsumerGroups}" Grid.Row="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Views:ConsumerGroupCardView DataContext="{Binding }" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListView>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <TextBox Text="{Binding NewConsumerGroupName, Mode=TwoWay}"
                         Controls:TextboxHelper.Watermark="Neue Verbrauchergruppe..." />
                <Button Width="50"
                        Height="50"
                        Margin="0, 10, 0, 0"
                        Style="{DynamicResource MetroCircleButtonStyle}"
                        cal:Message.Attach="AddNewConsumerGroup()">
                    <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
                                         Visual="{DynamicResource appbar_add}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>