<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary
      Source="../Brushes.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <Style
    TargetType="{x:Type xctk:DateTimePicker}">
    <Setter
      Property="Format"
      Value="Custom" />
    <Setter
      Property="FormatString"
      Value="ddddd, d MMMM yyyy HH:mm" />
    <Setter
      Property="TimeFormat"
      Value="ShortTime" />
  </Style>

  <Style
    x:Key="TimePickerStyle"
    TargetType="{x:Type xctk:TimePicker}">
    <Setter
      Property="Background"
      Value="White" />
  </Style>

</ResourceDictionary>